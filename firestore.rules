rules_version = '2';
service cloud.firestore {
match /databases/{database}/documents {

// 1. Users Collection:
// Users can only read and write their OWN document.
match /users/{userId} {
  allow read, write: if request.auth != null && request.auth.uid == userId;
}

// 2. Blog Posts (Articles):
// Public read access, but only admins can write (you'd set a specific admin UID).
match /articles/{articleId} {
  allow read: if true;
  allow write: if request.auth != null && request.auth.uid == 'YOUR_ADMIN_UID_HERE';
}

// Default deny all other access
match /{document=**} {
  allow read, write: if false;
}


}
}
